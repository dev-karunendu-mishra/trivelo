          "name": "Get Hotel Details",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{api_url}}/hotels/1",
              "host": ["{{api_url}}"],
              "path": ["hotels", "1"]
            }
          }
        },
        {
          "name": "Create Hotel",
          "request": {
            "method": "POST",
